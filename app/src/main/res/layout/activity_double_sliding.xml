<com.focus.imitationui.doubleSliding.MyDrawlerLayout
    android:id="@+id/id_drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_frame_background">
    <!--背景截的QQ的图,增加了一个按键,用于触发右滑-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/qq">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tool_bar"/>
        <com.github.ksoichiro.android.observablescrollview.ObservableListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.ksoichiro.android.observablescrollview.ObservableListView>
    </LinearLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.focus.imitationui.doubleSliding.MenuLeftFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT"/>

    <fragment
        android:id="@+id/id_right_menu"
        android:name="com.focus.imitationui.doubleSliding.MenuRightFragment"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="RIGHT"/>

</com.focus.imitationui.doubleSliding.MyDrawlerLayout>